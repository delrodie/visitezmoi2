{{ form_start(form) }}
    <div class="form-group">
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-12 mt-3">
                        {{ form_row(form.titre) }}
                    </div>
                    <div class="col-12 mt-3">
                        {{ form_row(form.adresse) }}
                    </div>
                    <div class="col-12 mt-3">
                        {{ form_row(form.telephone) }}
                    </div>
                    <div class="col-12 mt-3">
                        {{ form_row(form.website) }}
                    </div>
                    <div class="col-12 mt-3">
                        {{ form_row(form.visiteLien) }}
                    </div>
                </div>
            </div>
            <div class="col-6">
                {{ form_row(form.description) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-5">
                {{ form_row(form.visiteDossier) }}
            </div>
            <div class="col-5">
                {{ form_row(form.googleMap) }}
            </div>
            <div class="col-2">
                {{ form_row(form.prix) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-4">
                {{ form_row(form.partenaire) }}
            </div>
            <div class="col-4">
                {{ form_row(form.categorie) }}
            </div>
            <div class="col-4">
                {{ form_row(form.mode) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-4">
                {{ form_row(form.debutPromo) }}
            </div>
            <div class="col-4">
                {{ form_row(form.finPromo) }}
            </div>
            <div class="col-4">
                {{ form_row(form.tags) }}
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-6">
                {{ form_row(form.media) }}
            </div>
        </div>
    </div>
    {{ form_widget(form) }}
    <div class="text-right mt-5">
        <input type="hidden" name="ancien_media"value="{{ bien.media }}">
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>

{{ form_end(form) }}
