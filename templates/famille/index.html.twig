{% extends 'backoffice_layout.html.twig' %}

{% block title %}{{ parent() }} Gestion des familles{% endblock %}

{% block body %}

    <div class="page-content-wrapper dashboard">

        <div class="container-fluid">

            <div class="row">
                <div class="col-sm-12">
                    <div class="page-title-box">
                        <h4 class="page-title">Gestion des familles </h4>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12 col-xl-8">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">Liste des familles</h4>

                            <table id="datatable-buttons" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                <thead>
                                <tr>
                                    <th class="text-center">ID</th>
                                    <th class="text-center">CODES</th>
                                    <th class="text-center">FAMILLES</th>
                                    <th class="text-center">NOMBRE DE PRODUITS</th>
                                    <th class="text-center">ACTIONS</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for famille in familles %}
                                    <tr>
                                        <td class="text-right mr-3">{{ loop.index }}</td>
                                        <td class="text-center">{{ famille.code }}</td>
                                        <td>{{ famille.libelle }}</td>
                                        <td class="text-center">{{ famille.nombreProduit ? famille.nombreProduit : '-' }}</td>
                                        <td class="text-center">
                                            <a href="{{ path('famille_edit', {'id': famille.id}) }}"><i class="fa fa-edit"></i></a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <div class="col-md-12 col-xl-4">
                    <div class="card m-b-30">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">Enregistrerment</h4>

                            {{ include('famille/_form.html.twig') }}

                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('backoffice/plugins/select2/select2.min.css') }}">
    <link rel="stylesheet" href="{{ asset('backoffice/plugins/datatables/dataTables.bootstrap4.min.css') }}">
    <link rel="stylesheet" href="{{ asset('backoffice/plugins/datatables/buttons.bootstrap4.min.css') }}">
    <link rel="stylesheet" href="{{ asset('backoffice/plugins/datatables/responsive.bootstrap4.min.css') }}">
    <style type="text/css">
        .domaine-select{
            background-color: rgba(105, 103, 154, 0.3) !important;
        }
        .domaine-select:focus{
            outline: none;
        }
        .domaine-select{
            color: rgba(0, 0, 0, 0.5);
            line-height: 38px;
        }
        .domaine-select__choice{
            margin-top: 7px;
            background-color: rgba(105, 103, 154, 0.3);
        }
        .select--container--default{
            color: #0b0b0b;
            background-color: #6b6096;
        }
        .select2-dropdown {
            background-color: #6b6096;
            color: rgba(255, 255, 255, 0.5);
            border-color: rgba(255, 255, 255, 0.2);
        }
        .select2-container--default .select2-results__option--highlighted[aria-selected] {
            background-color: #444444;
            color: #fff;
        }

        .select2-container--default .select2-search--dropdown .select2-search__field {
            border: 1px solid rgba(255, 255, 255, 0.2);
            background-color: #3e6b7f;
            color: rgba(255, 255, 255, 0.5);
        }

        .select2-container--default .select2-results__option[aria-selected=true] {
            background-color: #365d6e;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
    </style>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('backoffice/plugins/select2/select2.min.js') }}"></script>
    <script src="{{ asset('backoffice/js/bootstrap-tagsinput.min.js') }}"></script>
    <script src="{{ asset('backoffice/plugins/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('backoffice/plugins/datatables/dataTables.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('backoffice/plugins/datatables/dataTables.buttons.min.js') }}"></script>
    <script src="{{ asset('backoffice/plugins/datatables/buttons.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('backoffice/plugins/datatables/jszip.min.js') }}"></script>
    <script src="{{ asset('backoffice/plugins/datatables/pdfmake.min.js') }}"></script>
    <script src="{{ asset('backoffice/plugins/datatables/vfs_fonts.js') }}"></script>
    <script src="{{ asset('backoffice/plugins/datatables/buttons.html5.min.js') }}"></script>
    <script src="{{ asset('backoffice/plugins/datatables/buttons.print.min.js') }}"></script>
    <script src="{{ asset('backoffice/plugins/datatables/buttons.colVis.min.js') }}"></script>
    <script src="{{ asset('backoffice/plugins/datatables/dataTables.responsive.min.js') }}"></script>
    <script src="{{ asset('backoffice/plugins/datatables/responsive.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('backoffice/pages/datatables.init.js') }}"></script>
    <script>
        $(".domaine-select").select2();
    </script>
{% endblock %}
